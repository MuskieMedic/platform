#!/bin/bash

echo "=== checking ssh keys ==="
if [ ! -f /etc/ssh/ssh_host_rsa_key ]; then
    echo "ERROR: ssh key does not exist: /etc/ssh/ssh_host_rsa_key"
fi
if [ ! -f /etc/ssh/ssh_host_dsa_key ]; then
    echo "ERROR: ssh key does not exist: /etc/ssh/ssh_host_dsa_key"
fi
if [ ! -f /etc/ssh/ssh_host_ecdsa_key ]; then
    echo "ERROR: ssh key does not exist: /etc/ssh/ssh_host_ecdsa_key"
fi