#!/bin/bash

LOCAL_DATA=/home/www-data

mkdir -p ${LOCAL_DATA}
chown -R www-data. ${LOCAL_DATA}
/usr/local/bin/syncloud-link-data.sh ${LOCAL_DATA}

ls -la ${LOCAL_DATA}/

chmod 640 /etc/sudoers.d/www-data
adduser www-data plugdev

systemctl enable ntpdate.service || true
systemctl enable udisks-glue.service || true
systemctl enable syncloud-resize-sd.service || true
systemctl enable insider-sync.service || true
systemctl enable cpu-frequency.service || true
