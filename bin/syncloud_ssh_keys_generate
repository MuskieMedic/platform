#!/bin/bash

echo "=== generate ssh keys for internal ssh server"
if [ ! -f /etc/ssh/ssh_host_rsa_key ]; then
    echo "generating /etc/ssh/ssh_host_rsa_key ..."
    ssh-keygen -t rsa -f /etc/ssh/ssh_host_rsa_key -N '' -b 2048
else
    echo "Already exists /etc/ssh/ssh_host_rsa_key"
fi
if [ ! -f /etc/ssh/ssh_host_dsa_key ]; then
    echo "/etc/ssh/ssh_host_dsa_key ..."
    ssh-keygen -t dsa -f /etc/ssh/ssh_host_dsa_key -N ''
else
    echo "Already exists /etc/ssh/ssh_host_dsa_key"
fi
if [ ! -f /etc/ssh/ssh_host_ecdsa_key ]; then
    echo "/etc/ssh/ssh_host_ecdsa_key ..."
    ssh-keygen -t ecdsa -f /etc/ssh/ssh_host_ecdsa_key -N ''
else
    echo "Already exists /etc/ssh/ssh_host_ecdsa_key"
fi